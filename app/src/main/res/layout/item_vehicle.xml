<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <Button
        android:id="@+id/btnPlateLetters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="100dip"
        android:minWidth="110dip"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="AAA"
        android:textSize="42dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPlateNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="120dip"
        android:minWidth="120dip"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="9D99"
        android:textSize="42dp"
        app:cornerRadius="10dp"
        app:iconPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPlateLetters"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="150dip"
        android:minWidth="150dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Marca"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnPlateNumbers"
        app:layout_constraintTop_toTopOf="@+id/btnPlateNumbers" />

    <Button
        android:id="@+id/btnModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="150dip"
        android:minWidth="150dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Modelo"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlateNumbers"
        app:layout_constraintStart_toEndOf="@+id/btnPlateNumbers" />

    <Button
        android:id="@+id/btnQth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="120dip"
        android:maxHeight="44dip"
        android:minWidth="120dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="HT"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnYear"
        app:layout_constraintTop_toBottomOf="@+id/btnPlateNumbers" />

    <Button
        android:id="@+id/btnQru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="50dip"
        android:minWidth="50dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="B04"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnQth"
        app:layout_constraintTop_toBottomOf="@+id/btnModel" />

    <Button
        android:id="@+id/btnYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="49dip"
        android:minWidth="54dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="99"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnTypeVehicle"
        app:layout_constraintTop_toBottomOf="@+id/btnPlateLetters" />

    <Button
        android:id="@+id/btnDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="46dip"
        android:minWidth="46dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="01"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnColor"
        app:layout_constraintTop_toBottomOf="@+id/btnModel" />

    <Button
        android:id="@+id/btnTypeVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="49dip"
        android:maxHeight="44dip"
        android:minWidth="54dip"
        android:minHeight="44dip"
        android:gravity="center"
        android:padding="4dp"
        app:cornerRadius="10dp"
        app:iconPadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlateLetters" />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:maxWidth="50dip"
        android:minWidth="50dip"
        android:minHeight="44dip"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Cor"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnQru"
        app:layout_constraintTop_toBottomOf="@+id/btnModel" />

</androidx.constraintlayout.widget.ConstraintLayout>